<div class="container margin-tb">
    <div class="row">
        <div class="col-3 margin-tb">
            <%= render 'sidebar', genres: @genres %>
        </div>

        <div class="col-9">
        <h2>商品一覧<span class="item-count">(全<%= @items.count %>件)</span></h2>
            <div class="row">
                <% @items.each do |item|%>
                <div class="col-3 item-card">
                    <table>
                        <tr>

                            <th class="item-card-th th-img">
                                <%= link_to (item_path(item)) do%>
                                <%= attachment_image_tag item, :image, format: "jpeg", fallback: "fallback_image.jpg", class: "item-img" %>
                                <%end%>
                            <th>

                        </tr>
                        <tr><th class="item-card-th"><%= item.name %></th></tr>
                        <tr><th class="item-card-th"><%= (item.untaxed_price * 1.08).round(0)%>円（税込み）</th></tr>
                    </table>
                </div>
                <%end%>
            </div>
        </div>
    </div>

</div>