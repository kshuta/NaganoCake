<div class="container">
    <h2>ジャンル一覧・追加</h2>
    <%= form_with model: @new_genre, url: admin_genres_path do |f|%>
    <table class="admin-genre-table-form">
        <tbody>
            <tr>
                <td class="admin-genre-td-form"><strong>ジャンル</strong></td>
                <td class="admin-genre-td-form"><%= f.text_field :name%></td>
                <td class="admin-genre-td-form"><%= radio_button_tag(:is_activated, "true") %> 有効</td>
                <td class="admin-genre-td-form"><%= radio_button_tag(:is_activated, "false") %> 無効</td>
                <td class="admin-genre-td-form"><%= f.submit "追加", class: "btn btn-primary" %></td>
            </td>
        </tbody>
    </table>
    <%end%>

    <table class="admin-genre-table">
        <thead>
            <tr class="table-active">
                <th>ジャンル</th>
                <th colspan="2">状態</th>

            </tr>
        </thead>
        <tbody>
        <% @genres.each do |genre| %>
            <tr>
                <td class="admin-genre-td"><%= genre.name %></td>
                <% if genre.is_activated %>
                    <td class="admin-genre-td">有効</td>
                <%else%>
                    <td class="admin-genre-td">無効</td>
                <%end%>
                <td class="admin-genre-td"><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-primary"%></td>
            </tr>
        <%end%>
                
</div>